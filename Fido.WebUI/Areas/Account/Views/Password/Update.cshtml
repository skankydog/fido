@model Fido.Action.Models.Account.Password
@using Fido.WebUI.Extensions

<div id="skd-modal-ajax-wrapper">

    <div class="modal-header">
        <h2>Change Password</h2>
        <div class="row">
            <div class="col-xs-12">
                @Html.Flash()
            </div>
        </div>
    </div>

    @using (Ajax.BeginForm("Update", "Password",
        new AjaxOptions
        {
            HttpMethod = "POST",
            UpdateTargetId = "skd-modal-ajax-wrapper"
        }))
    {
        @Html.AntiForgeryToken()
    
        <div class="modal-body">
            <div class="row skd-row-sm-offset-1">
                <div class="col-sm-10">

                    Complete the detail below and click on the ok button at the bottom of the screen to change
                    the password for this account.
                    <span class="skd-spacing"></span>

                    <span class="skd-spacing"></span>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                        @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", @placeholder = "current password", @value = "" })
                    </div>
                    @Html.ValidationMessageFor(m => m.OldPassword, "", new { @class = "text-danger" })

                    <span class="skd-spacing"></span>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                        @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", @placeholder = "new password", @value = "" })
                    </div>
                    @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })

                    <span class="skd-spacing"></span>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "confirm password", @value = "" })
                    </div>
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="modal-footer">
            <div class="col-xs-6 col-centered">
                <button type="submit" class="btn btn-success btn-circle btn-lg" name="Cmd" value="Save" id="approve-btn">
                    <span><i class="fa fa-check"></i></span>
                </button>
            </div>
            <div class="col-xs-6 col-centered">
                <button type="button" class="btn btn-danger btn-circle btn-lg" data-dismiss="modal">
                    <i class="fa fa-times"></i>
                </button>
            </div>
        </div>
    }
</div>
