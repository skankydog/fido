@using Microsoft.AspNet.Identity
@using Fido.WebUI.Extensions

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>

    <link href="~/Content/font-awesome-4.2.0/css/font-awesome.min.css" rel="stylesheet" />
    @Styles.Render("~/administration.styles")
    @Scripts.Render("~/page.top.scripts")
    @RenderSection("styles", false)

    <meta name="description" content="Fido" />
</head>

<body>
    <div id="wrapper">

        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">

            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>

            @using (Html.BeginForm("Logout", "Authentication", new { Area = string.Empty }, FormMethod.Post, new { id = "LogoutForm" }))
            {
                @Html.AntiForgeryToken()

                <ul class="nav navbar-top-links navbar-left">
                    <li class="dropdown">
                        @Html.ActionLink("About", "About", "Home", null, new { @class = "modal-link" })
                    </li>
                </ul>
                
                <ul class="nav navbar-top-links navbar-right">
                    <li class="dropdown">
                        @if (Request.IsAuthenticated)
                        {
                            <!-- User -->
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">@User.Identity.GetUserName()<i class="fa fa-caret-down"></i></a>
                            <ul class="dropdown-menu dropdown-user">
                                <li><a href="@Url.Action("Update", "Profile", new { Area = "Account" })"><i class="fa fa-user fa-fw"></i>Profile</a></li>
                                <li><a href="@Url.Action("Settings", "Account", new { Area = string.Empty })"><i class="fa fa-gear fa-fw"></i> Settings</a></li>
                                <li class="divider"></li>
                                <li><a title="Logout" href="javascript:document.getElementById('LogoutForm').submit()"><i class="fa fa-sign-out fa-fw"></i> Logout</a></li>
                            </ul>
                        }
                        else
                        {
                            <a href="@Url.Action("Login", "Authentication", new { Area = string.Empty })">Login</a>
                        }
                    </li>
                </ul>
            }

            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">

                        <li class="sidebar-search">
                            <div class="input-group custom-search-form">
                                <input type="text" class="form-control" placeholder="Search...">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="button">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </span>
                            </div>
                        </li>

                        <li>
                            <a href="#"><i class="fa fa-bar-chart-o fa-fw"></i> Charts<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="flot.html">Flot Charts</a>
                                </li>
                                <li>
                                    <a href="morris.html">Morris.js Charts</a>
                                </li>
                            </ul> <!-- /.nav-second-level -->
                        </li>

                        <li>
                            <a href="forms.html"><i class="fa fa-edit fa-fw"></i> Forms</a>
                        </li>

                        <li>
                            <a href="#"><i class="fa fa-wrench fa-fw"></i> UI Elements<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="panels-wells.html">Panels and Wells</a>
                                </li>
                                <li>
                                    <a href="buttons.html">Buttons</a>
                                </li>
                                <li>
                                    <a href="notifications.html">Notifications</a>
                                </li>
                                <li>
                                    <a href="typography.html">Typography</a>
                                </li>
                                <li>
                                    <a href="grid.html">Grid</a>
                                </li>
                            </ul> <!-- /.nav-second-level -->
                        </li>

                        <li>
                            <a href="#"><i class="fa fa-cogs fa-fw"></i> Fun<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="@Url.Action("Index", "User", new { Area = "Administration" })">Users</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Index", "Role", new { Area = "Administration" })">Roles</a>
                                </li>
                                <li>
                                    <a href="#">Third Level <span class="fa arrow"></span></a>
                                    <ul class="nav nav-third-level">
                                        <li>
                                            <a href="#">Third Level Item</a>
                                        </li>
                                        <li>
                                            <a href="#">Third Level Item</a>
                                        </li>
                                        <li>
                                            <a href="#">Third Level Item</a>
                                        </li>
                                        <li>
                                            <a href="#">Third Level Item</a>
                                        </li>
                                    </ul> <!-- /.nav-third-level -->
                                </li>
                            </ul> <!-- /.nav-second-level -->
                        </li>
                    </ul>
                </div> <!-- /.sidebar-collapse -->
            </div> <!-- /.navbar-static-side -->
        </nav>

        <div id="page-wrapper">

            <div class="row">
                <div class="col-lg-12">
                    @Html.Flash()
                </div>
            </div>

            <h1>@ViewBag.Title</h1>
            <div style="width: 100%; height: 1px; margin-top: 2px; margin-bottom: 20px; background: #a1a0a0; overflow: hidden;"></div>

            @RenderBody()

            <div style="width: 100%; height: 1px; margin-top: 2px; margin-bottom: 20px; background: #a1a0a0; overflow: hidden;"></div>
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - SkankyDog Software</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/page.bottom.scripts")
    @RenderSection("scripts", false)

    @* Morris Charts JavaScript - only include when using or it fails! *@
    @*<script src="~/Scripts/plugins/morris/raphael.min.js"></script>
    <script src="~/Scripts/plugins/morris/morris.min.js"></script>
    <script src="~/Scripts/plugins/morris/morris-data.js"></script>*@

    @* Modal dialog boxes are injected into the below... *@
    <div id="modal-container" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
            </div>
        </div>
    </div>

</body>
</html>
