@model Fido.Action.Models.LocalCredentialAdmin
@using Fido.WebUI.Extensions

<div id="skd-modal-ajax-wrapper">

    <div class="modal-header">
        <h2>Create Local Credentials?</h2>
        <div class="row">
            <div class="col-xs-12">
                @Html.Flash()
            </div>
        </div>
    </div>

    @using (Ajax.BeginForm("Update", "LocalCredential",
        new AjaxOptions
        {
            HttpMethod = "POST",
            UpdateTargetId = "skd-modal-ajax-wrapper"
        }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)

        <div class="modal-body">
            <div class="row skd-row-sm-offset-1">
                <div class="col-sm-10">

                    Enter an email address and one-time password below to create local credentials for this account. The user will be asked to
                    change their password on login.
                    <span class="skd-spacing"></span>

                    <span class="skd-spacing"></span>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-user"></i></span>
                        @Html.TextBoxFor(m => m.EmailAddress, new { @class = "form-control", @placeholder = "email address", @value = "" })
                    </div>

                    <span class="skd-spacing"></span>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-user"></i></span>
                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @placeholder = "one-time password", @value = "" })
                    </div>
                </div>
            </div>
        </div>

        <div class="modal-footer">
            <div class="col-xs-6 col-centered">
                <button type="submit" class="btn btn-success btn-circle btn-lg" name="Cmd" value="Save" id="approve-btn">
                    <span><i class="fa fa-check"></i></span>
                </button>
            </div>
            <div class="col-xs-6 col-centered">
                <button type="button" class="btn btn-danger btn-circle btn-lg" data-dismiss="modal">
                    <i class="fa fa-times"></i>
                </button>
            </div>
        </div>

        <span class="skd-spacing-large"></span>
    }
</div>
