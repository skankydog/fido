@using Microsoft.Owin.Security
@model Fido.Action.Models.ExternalCredential

<h4>Use another service to log in.</h4>
<hr />
@{
    var ExternalProviders = Context.GetOwinContext().Authentication.GetExternalAuthenticationTypes();
    if (ExternalProviders.Count() == 0)
    {
        <div>
            <p>There are no external authentication services configured. See <a href="http://go.microsoft.com/fwlink/?LinkId=313242">this article</a>
            for details on setting up this ASP.NET application to support logging in via external services.</p>
        </div>
    }
    else
    {
        using (Html.BeginForm(Model.Action, "Authentication", new { ReturnUrl = Model.ReturnUrl }))
        {
            @Html.AntiForgeryToken()
            <div id="ExternalProviderList">
                <p>
                @foreach (AuthenticationDescription ExternalProvider in ExternalProviders)
                {
                    <button type="submit" class="btn btn-default"
                            id="@ExternalProvider.AuthenticationType"
                            name="provider"
                            value="@ExternalProvider.AuthenticationType"
                            title="Log in using your @ExternalProvider.Caption account">
                        @ExternalProvider.AuthenticationType
                    </button>
                }
                </p>
            </div>
        }
    }
}
